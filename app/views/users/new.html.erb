<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>
<% if logged_in?   %>
  <script type="text/javascript">
    window.location.href="/recipes"  // put your correct path in a string here
  </script>
<% end %>
<div class="row bg-light">
  <div class="col-md-6 col-md-offset-3 ">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'shared/error_messages' %>
      
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control rounded' %>
    <br>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control rounded' %>
    <br>
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control rounded' %>
    <br>
      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control rounded' %>
    <br>
      <%= f.submit "Create my account", class: "btn btn-primary rounded" %>
    <% end %>
  </div>
</div>